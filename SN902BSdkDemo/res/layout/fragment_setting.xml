<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/page_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item"
            android:background="@drawable/page_item_bg"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/alarm"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />

        <include
            layout="@layout/divider_line"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin" />

        <TextView
            android:id="@+id/tv_small_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item"
            android:background="@drawable/page_item_bg"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/nightLight"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />

        <include
            layout="@layout/divider_line"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin" />

        <TextView
            android:id="@+id/tv_timer_task"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item"
            android:background="@drawable/page_item_bg"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/timer_task"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />

        <include
            layout="@layout/divider_line"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin" />

        <RelativeLayout
            android:id="@+id/layout_delay_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/delay_close"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_4" />

            <TextView
                android:id="@+id/tv_delay_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_5" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@color/COLOR_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/setGesture"
            android:textColor="@color/COLOR_4"
            android:textSize="@dimen/Title_4" />

        <TextView
            android:id="@+id/tv_gesture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item"
            android:background="@drawable/page_item_bg"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/Wave"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />

        <include
            layout="@layout/divider_line"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin" />

        <TextView
            android:id="@+id/tv_float_stop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item"
            android:background="@drawable/page_item_bg"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/Hover"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />

        <include
            layout="@layout/divider_line"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin" />

        <Button
            android:id="@+id/btn_restore"
            style="@style/common_bt"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="@string/factory_reset"
            android:textSize="@dimen/Title_2" />
    </LinearLayout>

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_50"
        android:clickable="true" />

</FrameLayout>